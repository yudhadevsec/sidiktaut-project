{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* JavaScript Support */
    "allowJs": true,
    
    /* Types */
    "types": ["node"],

    /* Path Aliases */
    "paths": {
      "@/*": ["./*"]
    }
  }
}